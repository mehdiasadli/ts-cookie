{
  "name": "@mehdiasadov/ts-cookie",
  "version": "1.0.0",
  "description": "Modern, TypeScript-first cookie library for browsers",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "keywords": [
    "cookie",
    "cookies",
    "typescript",
    "browser",
    "client",
    "js-cookie"
  ],
  "author": "Mehdi Asadli <asadlimehdi25@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mehdiasadli/ts-cookie.git"
  },
  "bugs": {
    "url": "https://github.com/mehdiasadli/ts-cookie/issues"
  },
  "homepage": "https://github.com/mehdiasadli/ts-cookie#readme",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  }
}
